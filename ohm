#!/usr/bin/env perl
use warnings;
use strict;
use File::Glob;
use Cwd;

my $CWD = Cwd::cwd();
my $CONFIG_DIR = glob '~/.hmofa/.config';
my $BASE_DIR = 0;
{
    open my $fh, '<', $CONFIG_DIR
        or die 'something happened';
    while (my $line = <$fh>)  {
        if ($line =~ m/^BASE=(.*)/) {
            $BASE_DIR = glob $1;
            last;
        }
    }
}
my $LIB_DIR = $BASE_DIR.'/lib';

print $BASE_DIR,"\n";
print $LIB_DIR,"\n";
print $CWD,"\n";
print "\n";

